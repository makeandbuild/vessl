							<useSystemClassLoader>false</useSystemClassLoader>
							<groups>function,passing</groups>
							<argLine>-Xmx2024M -XX:PermSize=2024m -XX:MaxPermSize=2024m</argLine>
						</configuration>
						<executions>
							<execution>
								<goals>
									<goal>integration-test</goal>
									<goal>verify</goal>
								</goals>
							</execution>
						</executions>
					</plugin>
				</plugins>
			</build>
		</profile>
		<profile>
			<id>functional</id>
			<build>
				<plugins>
					<plugin>
						<artifactId>maven-failsafe-plugin</artifactId>
						<version>2.14.1</version>
						<configuration>
							<testSourceDirectory>${basedir}/src/test/java/integration</testSourceDirectory>
							<useSystemClassLoader>false</useSystemClassLoader>
							<groups>function</groups>
							<argLine>-Xmx2024M -XX:PermSize=2024m -XX:MaxPermSize=2024m</argLine>
						</configuration>
						<executions>
							<execution>
								<goals>
									<goal>integration-test</goal>
									<goal>verify</goal>
								</goals>
							</execution>
						</executions>
					</plugin>
				</plugins>
			</build>
		</profile>
		<profile>
			<id>named</id>
			<build>
				<plugins>
					<plugin>
						<artifactId>maven-failsafe-plugin</artifactId>
						<version>2.14.1</version>
						<configuration>
							<testSourceDirectory>${basedir}/src/test/java/integration</testSourceDirectory>
							<useSystemClassLoader>false</useSystemClassLoader>
							<includes>
								<include>${project.name}</include>
							</includes>
						</configuration>
						<executions>
							<execution>
								<goals>
									<goal>integration-test</goal>
									<goal>verify</goal>
								</goals>
							</execution>
						</executions>
					</plugin>
				</plugins>
			</build>
		</profile>
	</profiles>
